<%- include('partials/header') %>
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Your Inventory</h2>
        <div>
            <a href="/items/new" class="btn btn-success">Add New Item</a>
            <a href="/logout" class="btn btn-danger">Logout</a>
        </div>
    </div>
    
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach(function(item) { %>
                <tr>
                    <td><%= item.name %></td>
                    <td><%= item.description %></td>
                    <td><%= item.quantity %></td>
                    <td>$<%= item.price %></td>
                    <td>
                        <a href="/items/<%= item.id %>" class="btn btn-info btn-sm">View</a>
                        <a href="/items/<%= item.id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/items/<%= item.id %>/delete" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
<%- include('partials/footer') %>